<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.web.mapper.Mapper">
    <select id="selectAll" resultType="com.bitcamp.web.domain.BoardDTO" parameterType="com.bitcamp.web.domain.Command">
    SELECT * 
    FROM BOARD 
    </select>
    <select id="articles" resultType="com.bitcamp.web.domain.BoardDTO" parameterType="com.bitcamp.web.domain.Command">
    SELECT * FROM (SELECT * FROM (SELECT ROWNUM AS rownu, BBS_SEQ AS bbsSeq,title,content,regdate,id AS userid FROM (SELECT * FROM board ORDER BY BBS_SEQ desc)) WHERE #{data2} >= rownu ) WHERE rownu >= #{data1} 
    </select>
    <select id="selectById" resultType="com.bitcamp.web.domain.MemberDTO" parameterType="com.bitcamp.web.domain.Command">
    SELECT * FROM MEMBER WHERE ID LIKE #{data1} AND PASS LIKE #{data2}
    </select>
    <select id="exist" resultType="int" parameterType="com.bitcamp.web.domain.Command">
    SELECT COUNT(*) FROM MEMBER WHERE ID LIKE #{data1} AND PASS LIKE #{data2}
    </select>
    <delete id="deleteMember" parameterType="com.bitcamp.web.domain.Command"></delete>
</mapper>